<% if (@deck.deck_cards.size < 31) %>
   <%= render 'arena' %>
<% else %>
    <h1>deck: <%= @deck.name %><%= link_to 'delete deck', deck_path(@deck), method: :delete, class: "btn btn-danger" %></h1>
    <% @deck.cards.order(:cost).each do |card| %>
        <%= image_tag card.img, style: "height: 200px" %>
    <% end %>
<% end %>