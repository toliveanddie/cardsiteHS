<%= form_for @profile, :html => { :class => "form-horizontal profile" } do |f| %>

  <% if @profile.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @profile.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :first_name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :first_name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:first_name) %>
  </div>
  <div class="form-group">
    <%= f.label :favorite_hero_class, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :favorite_hero_class, :class => 'form-control' %>
    </div>
    <%=f.error_span(:favorite_hero_class) %>
  </div>
  <div class="form-group">
    <%= f.label :battle_tag, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :battle_tag, :class => 'form-control' %>
    </div>
    <%=f.error_span(:battle_tag) %>
  </div>
  <div class="form-group">
    <%= f.label :steam_name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :steam_name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:steam_name) %>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                profiles_path, :class => 'btn btn-default' %>
    </div>
</div>

<% end %>
