<h1>Neutral Cards</h1>
<h4>ordered by cardset...basic, classic, whispers...etc</h4>


<%= will_paginate @neutral %>
<div class="row">
    <h3>
        <div class="col-md-2">Meta Score</div>
        <div class="col-md-2">Card Name</div>
        <div class="col-md-2">Mana Cost</div>
        <div class="col-md-2">Rarity</div>
        <div class="col-md-2">Card Set</div>
    <h3>
</div>
<hr>

<% @neutral.each do |card| %>
    <div class="row">
        <div class="col-md-2">
            <h4><%= card.tier_scores.first.hero_score %></h4>
        </div>
        <div class="col-md-2">
            <h4><%= link_to card.name, card %></h4> 
        </div>
        <div class="col-md-2">
            <h4><%= card.cost %></h4>
        </div>
        <div class="col-md-2">
            <h4><%= card.rarity %></h4>
        </div>
        <div class="col-md-2">
            <h4><%= card.cardSet %></h4>
        </div>
    </div>
<% end %>

<%= will_paginate @neutral %>